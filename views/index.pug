extends layout

block content
  .container
    br
    h1.text-primary= title
    .row
      .col-4
        | Panel number: 
        input#panel_number(type='number')
      .col-1
      .col-2
        button#btnShowAllFields.btn.btn-block.btn-info Show 
    .row
      .col-1
          | Missing straws: 
      .col-1
        form
          div
          input#uw_op_greater(type='radio', name='unusable_wires_op', value='>', checked='')
          label(for='uw_op_greater') >
          br
          input#uw_op_lesser(type='radio', name='unusable_wires_op', value='<')
          label(for='uw_op_lesser') <
          br
          input#uw_op_equal(type='radio', name='unusable_wires_op', value='=')
          label(for='uw_op_equal') =
          br
          input#uw_op_greaterequal(type='radio', name='unusable_wires_op', value='>=')
          label(for='uw_op_greaterequal') >=
          br
          input#uw_op_lesserequal(type='radio', name='unusable_wires_op', value='<=')
          label(for='uw_op_lesserequal') <=

      .col-3
        input#uw_value(type='number')
      .col-2
        button#btnSubmit.btn.btn-block.btn-info  Submit
    //.row
      //.col-3
        //select#issues
          //option(value='missing_straws') Missing Straws
          //option(value='high_current_wires') High Current Wires
    .row
      | Output:
      .bg-muted.text-body.rounded
        pre#panel_info
    .row
      | Plots:
      div#straw_status_plot(style="width:1300px;height:400px;")
    .row
        | Verbose Output:
        pre#log.


  
