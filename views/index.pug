extends layout

block content
  .container
    br
    h1.text-primary= title
    .row
      .col-4
        | Panel number: 
        input#panel_number(type='number')
      .col-1
      .col-2
        button#btnShowAllFields.btn.btn-block.btn-info Show 
    .row
      .col-1
          | Unusable wires: 
      .col-1
        form
          div
            input#uw_op1_greater(type='radio', name='unusable_wires_op', value='>', checked='')
            label(for='uw_op1_greater') >
            br
            input#uw_op2_lesser(type='radio', name='unusable_wires_op', value='<')
            label(for='uw_op2_lesser') <
            br
            input#uw_op3_equal(type='radio', name='unusable_wires_op', value='=')
            label(for='uw_op3_equal') =
      .col-3
        input#uw_value(type='number')
      .col-2
        button#btnSubmit.btn.btn-block.btn-info  Submit
    .row
        pre#log.
    .row
      .bg-muted.text-body.rounded
        pre#panel_info

  
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js', integrity='sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4', crossorigin='anonymous')
  script(src='javascripts/main.js')
  
