extends layout

block content
  .container
    br
    h2 DRAC Summary
      h3
      .row
       .col-7
         | Show DRAC test results for DRAC ID: 
         input#drac_id(type='text')
       .col-2
         button#btnShowDrac.btn.btn-block.btn-info Show Drac
      .row
        div#drac_test_plot(style="width:1300px;height:400px;")
      h3 Table of DRAC tests
      .row
        input#drac_filter(type='text', placeholder="Search by DRAC ID...")
        table#drac_tests_table(style="width:1300px;height:2px;")
      h3 Table of ROC Config IDs
      .row
        input#roc_config_filter(type='text', placeholder="Search by ROC Config ID...")
        table#roc_configs_table(style="width:1300px;height:2px;")
      h3 Table of CAL Config IDs
      .row
        input#cal_config_filter(type='text', placeholder="Search by CAL Config ID...")
        table#cal_configs_table(style="width:1300px;height:2px;")
      h3 Table of HV Config IDs
      .row
        input#hv_config_filter(type='text', placeholder="Search by HV Config ID...")
        table#hv_configs_table(style="width:1300px;height:2px;")


