extends layout

block content
  .container
    br
    h1.text-primary= title
    h2 All Panels QC Summary
    .row
       div#issue_vs_panel_plot(style="width:1300px;height:400px;")
    h2 Single Panel QC Summary
    .row
       .col-5
         | Show all issues with panel number: 
         input#panel_number(type='number')
       .col-2
         button#btnShowAllFields.btn.btn-block.btn-info Show Panel
    .row
       | Output:
       .bg-muted.text-body.rounded
       pre#panel_info(style="width:1300px;height:100px;")
       div#straw_status_plot(style="width:1300px;height:400px;")
    h2 Find Panels
    .row
      .col-2
        | Find panels with:
      .col-2
        form
          div
          input#uw_op_issue1_greater(type='radio', name='unusable_wires_op', value='>')
          label(for='uw_op_issue1_greater') >
          input#uw_op_issue1_lesser(type='radio', name='unusable_wires_op', value='<')
          label(for='uw_op_issue1_lesser') <
          input#uw_op_issue1_equal(type='radio', name='unusable_wires_op', value='=')
          label(for='uw_op_issue1_equal') =
          input#uw_op_issue1_greaterequal(type='radio', name='unusable_wires_op', value='>=')
          label(for='uw_op_issue1_greaterequal') >=
          input#uw_op_issue1_lesserequal(type='radio', name='unusable_wires_op', value='<=')
          label(for='uw_op_issue1_lesserequal') <=
      .col-2
        input#uw_value_issue1(type='number')
      .col-2
        select#issue1
          option(value='total_issues') Total Issues
          option(value='unusable_channels') Unusable Channels
          option(value='semi_unusable_channels') Semi-unusable Channels
          option(value='missing_straws') Missing Straws
          option(value='high_current_wires') High Current Wires
          option(value='blocked_straws') Blocked Straws


      .col-2
        button#btnSubmit.btn.btn-block.btn-info  Find Panels

      .row
        .col-2
          form
            div
            input#uw_op_issue2_and(type='radio', name='unusable_wires_op', value='AND')
            label(for='uw_op_issue2_and') AND
            input#uw_op_issue2_or(type='radio', name='unusable_wires_op', value='OR')
            label(for='uw_op_issue2_or') OR
        .col-2
          form
            div
            input#uw_op_issue2_greater(type='radio', name='unusable_wires_op', value='>')
            label(for='uw_op_issue2_greater') >
            input#uw_op_issue2_lesser(type='radio', name='unusable_wires_op', value='<')
            label(for='uw_op_issue2_lesser') <
            input#uw_op_issue2_equal(type='radio', name='unusable_wires_op', value='=')
            label(for='uw_op_issue2_equal') =
            input#uw_op_issue2_greaterequal(type='radio', name='unusable_wires_op', value='>=')
            label(for='uw_op_issue2_greaterequal') >=
            input#uw_op_issue2_lesserequal(type='radio', name='unusable_wires_op', value='<=')
            label(for='uw_op_issue2_lesserequal') <=
        .col-2
          input#uw_value_issue2(type='number')
        .col-2
          select#issue2
            option(value='missing_straws') Missing Straws
            option(value='high_current_wires') High Current Wires
            option(value='blocked_straws') Blocked Straws

      .row
        .col-2
          form
            div
            input#uw_op_issue3_and(type='radio', name='unusable_wires_op', value='AND')
            label(for='uw_op_issue3_and') AND
            input#uw_op_issue3_or(type='radio', name='unusable_wires_op', value='OR')
            label(for='uw_op_issue3_or') OR
        .col-2
          form
            div
            input#uw_op_issue3_greater(type='radio', name='unusable_wires_op', value='>')
            label(for='uw_op_issue3_greater') >
            input#uw_op_issue3_lesser(type='radio', name='unusable_wires_op', value='<')
            label(for='uw_op_issue3_lesser') <
            input#uw_op_issue3_equal(type='radio', name='unusable_wires_op', value='=')
            label(for='uw_op_issue3_equal') =
            input#uw_op_issue3_greaterequal(type='radio', name='unusable_wires_op', value='>=')
            label(for='uw_op_issue3_greaterequal') >=
            input#uw_op_issue3_lesserequal(type='radio', name='unusable_wires_op', value='<=')
            label(for='uw_op_issue3_lesserequal') <=
        .col-2
          input#uw_value_issue3(type='number')
        .col-2
          select#issue3
            option(value='missing_straws') Missing Straws
            option(value='high_current_wires') High Current Wires
            option(value='blocked_straws') Blocked Straws

